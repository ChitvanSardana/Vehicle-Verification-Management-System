<%- include('partials/header') %>

<div class="container mt-5">
  <h1 style="text-align: center; color: #333;">RTO Login</h1>

  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="card" style="border: none; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <div class="card-body" style="padding: 30px;">

          <!-- Makes POST request to /register route with userType=rto and password field -->
          <form action="/register?userType=rto" method="POST">
            <div class="form-group">
              <label for="password" style="color: #555; font-weight: bold;">
                RTO Password
              </label>
              <input type="password" class="form-control" name="password" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div style="text-align: center;">
              <button type="submit" class="btn btn-register">
                Register as RTO
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
