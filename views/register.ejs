<%- include('partials/header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<style>
  /* Styles for the icons */
  .icon {
    margin-right: 5px;
    color: #555;
  }
</style>

<div class="container mt-5">
  <h1 style="text-align: center; color: #333;">Register/Login</h1>

  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="card" style="border: none; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <div class="card-body" style="padding: 30px;">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            
            <!-- Input fields for registration -->
            <!-- ...your existing input fields... -->
            <div class="form-group">
              <label for="firstname" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-user"></i>First Name
              </label>
              <input type="text" class="form-control" name="firstname" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="lastname" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-user"></i>Last Name
              </label>
              <input type="text" class="form-control" name="lastname" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="email" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-envelope"></i>Email
              </label>
              <input type="email" class="form-control" name="username" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="password" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-lock"></i>Password
              </label>
              <input type="password" class="form-control" name="password" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="dob" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-calendar"></i>Date of Birth
              </label>
              <input type="date" class="form-control" name="dob" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="gender" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-venus-mars"></i>Gender
              </label>
              <select class="form-control" name="gender" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
                <option value="">Select</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="form-group">
              <label for="contact" style="color: #555; font-weight: bold;">
                <i class="fas fa-phone-alt"></i>&nbspContact Number
              </label>
              <input type="text" class="form-control" name="contact" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="vehicleno" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-car"></i>Vehicle Number
              </label>
              <input type="text" class="form-control" name="vehicleNo" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="status" style="color: #555; font-weight: bold;">
                <i class='fas fa-bell'></i>&nbspStatus
              </label>
              <input type="text" class="form-control" name="status" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 10px; width: 100%; margin-bottom: 20px; color: #555;">
            </div>
            <div class="form-group">
              <label for="drivingLicense" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-file"></i>Driving License (PDF)
              </label>
              <input type="file" class="form-control-file" name="drivingLicense" style="color: #555;">
            </div>
          
            <div class="form-group">
              <label for="pollutionCertificate" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-file"></i>Pollution Certificate (PDF)
              </label>
              <input type="file" class="form-control-file" name="pollutionCertificate" style="color: #555;">
            </div>
          
            <div class="form-group">
              <label for="vehicleRegistration" style="color: #555; font-weight: bold;">
                <i class="icon fas fa-file"></i>Vehicle Registration Papers (PDF)
              </label>
              <input type="file" class="form-control-file" name="vehicleRegistration" style="color: #555;">
            </div>
            
            <div style="text-align: center;">
              <button type="submit" class="btn btn-register">
                <i class="icon fas fa-check-circle"></i>Register
              </button>
            </div>
            
          </form>
          
          <!-- Login button -->
          <div style="text-align: center; margin-top: 20px;">
            <a href="/login" class="btn btn-secondary">
              <i class="icon fas fa-sign-in-alt"></i>Login
            </a>
          </div>
        
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>